                                       <children>
                                          <ImageView fx:id="view" />
                                       </children>
                                    </GridPane>
                                 </content>
                              </ScrollPane>
                              <HBox prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <Label text="Scale" />
