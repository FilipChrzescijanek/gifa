                                            </items>
                                          </ToolBar>
                                          <Label text="Flip" GridPane.rowIndex="2" />
                                          <Label text="Rotate" GridPane.rowIndex="4" />
                                          <Group visible="false" GridPane.rowIndex="1">
                                             <children>
                                                <GridPane>
                                                   <columnConstraints>
                                                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="25.0" />
