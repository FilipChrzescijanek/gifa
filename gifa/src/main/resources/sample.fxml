                                                      <TextField text="10" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                                      <TextField text="10" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                                                      <TextField text="10" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                                                      <TextField text="10" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                                      <Label text="ROI" GridPane.columnSpan="4" />
                                                   </children>
                                                </GridPane>
                                             </children>
                                          </Group>
                                       </children>
                                    </GridPane>
                                 </content>
                            </Tab>
                            <Tab text="Features">
                                 <content>
                                    <VBox prefHeight="200.0" prefWidth="100.0">
                                       <children>
                                          <ScrollPane>
                                             <content>
                                                <VBox prefHeight="200.0" prefWidth="100.0" />
                                             </content>
                                          </ScrollPane>
                                          <HBox prefHeight="100.0" prefWidth="200.0">
                                             <children>
                                                <Button disable="true" mnemonicParsing="false" text="Select all" />
                                                <Button disable="true" mnemonicParsing="false" text="Deselect all" />
                                             </children>
                                          </HBox>
                                          <Button disable="true" mnemonicParsing="false" text="Get results" />
                                       </children>
                                    </VBox>
                                 </content>
                            </Tab>
                          </tabs>
                        </TabPane>
                     </right>
                  </BorderPane>
               </content>
            </Tab>
            <Tab closable="false" disable="true" text="Results">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <top>
                        <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                           <children>
                              <Label text="Number of columns" />
                              <TextField />
                           </children>
                        </HBox>
                     </top>
                     <center>
                        <ScrollPane BorderPane.alignment="CENTER">
                           <content>
                              <GridPane>
                                <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                </columnConstraints>
                                <rowConstraints>
