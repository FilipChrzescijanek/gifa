<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane fx:id="root" styleClass="root" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
			fx:controller="pwr.chrzescijanek.filip.gifa.controller.PanelController">
	<top>
		<HBox fx:id="panelHBox" alignment="CENTER">
			<Label fx:id="panelInfo" text="Click on any image to move according triangle point."/>
		</HBox>
	</top>
	<bottom>
		<HBox fx:id="panelControls" alignment="CENTER" minHeight="40.0">
			<Label fx:id="panelColumnsLabel" alignment="CENTER_RIGHT" text="Max. columns">
				<HBox.margin>
					<Insets right="50"/>
				</HBox.margin>
			</Label>
			<TextField fx:id="panelColumnsTextField" alignment="CENTER" text="3"/>
		</HBox>
	</bottom>
	<center>
		<GridPane BorderPane.alignment="CENTER">
			<columnConstraints>
				<ColumnConstraints percentWidth="100.0" hgrow="SOMETIMES"/>
			</columnConstraints>
			<rowConstraints>
				<RowConstraints percentHeight="100.0" vgrow="SOMETIMES"/>
			</rowConstraints>
			<ScrollPane fx:id="panelGridScrollPane" fitToWidth="true">
				<GridPane fx:id="panelGrid" vgap="10.0" hgap="10.0">
					<padding>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
					</padding>
				</GridPane>
			</ScrollPane>
		</GridPane>
	</center>
</BorderPane>